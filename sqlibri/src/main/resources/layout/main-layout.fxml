        <StackPane prefHeight="150.0" prefWidth="200.0">
          <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </padding>
          <children>
            <TreeView fx:id="dbStructure" prefHeight="200.0"
              prefWidth="200.0" />
          </children>
        </StackPane>
        <StackPane prefHeight="150.0" prefWidth="200.0">
          <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />

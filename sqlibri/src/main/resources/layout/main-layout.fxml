    <HBox prefHeight="18.0" prefWidth="600.0" BorderPane.alignment="CENTER">
      <children>
        <Label fx:id="statusBar" text="No queries have been executed yet.">
          <font>
            <Font name="Roboto Regular" size="14.0" />
          </font>
          <HBox.margin>
            <Insets left="10.0" />
          </HBox.margin>
        </Label>
      </children>
